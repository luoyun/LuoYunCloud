<domain type='kvm' id='${ I.id }'>
  <name>i-${ I.id }</name>
  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
    <boot dev='hd'/>
  </os>
  <memory>${ I.memory * 1024 }</memory>
  <vcpu>${ I.cpus }</vcpu>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/libexec/qemu-kvm</emulator>
    <disk type='file' device='floppy'>
      <driver name='qemu' type='raw' cache='none'/>
      <source file='%s/instances/${ I.id }/floppy.img'/>
      <target dev='fda' bus='fdc'/>
      <address type='drive' controller='0' bus='0' unit='0'/>
    </disk>

    <disk type='file' device='disk'>
      <driver name='qemu' type='raw' cache='none' io='threads'/>
      <source file='%s/instances/${ I.id }/os.img'/>
      <target dev='hda' bus='ide'/>
      <alias name='ide0-0-0'/>
      <address type='drive' controller='0' bus='0' target='0' unit='0'/>
    </disk>

    % if len(I.storages):
    % for INDEX, S in enumerate(I.storages):
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw' io='threads'/>
      <source file='%s/instances/${ I.id }/disk${ INDEX + 1 }.img'/>
      <target dev='hdb' bus='ide'/>
      <alias name='ide0-0-${ INDEX + 1 }'/>
      <address type='drive' controller='0' bus='0' target='0' unit='${ INDEX + 1 }'/>
    </disk>
    % endfor
    % endif

    <controller type='ide' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x1'/>
    </controller>

    <interface type='bridge'>
      <source bridge='br0'/>
      <mac address='${ I.mac }'/>
      <model type='virtio'/>
    </interface>

    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <input type='mouse' bus='ps2'/>
    <input type='tablet' bus='usb'/>
    <graphics type='spice' port='-1' autoport='yes'  keymap='en-us' listen='0.0.0.0' passwd='${ I.vdi_pass }'/>
    <video>
      <model type='qxl' vram='9216' heads='1'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
    </video>
    <sound model='ac97'/>
    <memballoon model='virtio'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x0'/>
    </memballoon>
    <channel type='spicevmc'>
      <target type='virtio' name='com.redhat.spice.0'/>
    </channel>
  </devices>
</domain>
