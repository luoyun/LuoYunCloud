<h2>${ _("Resource of ") }${ instance.name }</h2>

<table>
  <tbody>
    <tr><td>${ _("CPU numbers") }</td><td>${ instance.cpus }</td></tr>
    <tr><td>${ _("Memory") }</td><td>${ instance.memory }</td></tr>
  </tbody>
</table>

% if current_user and current_user.id == instance.user_id:
<div class="action">
  <span class="edit"><a class="ly-btn2 small green" href="${ reverse_url('instance:resource:edit', instance.id) }">${ _("Edit") }</a></span>
</div>
% endif
